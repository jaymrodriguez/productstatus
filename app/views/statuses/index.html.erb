<section class="header">
  <nav><%= link_to 'New Status', new_status_path, :class=>"button" %></nav>
  <h1>Listing Status</h1> 
</section>

<table cellpadding=5 cellspacing =0 border=1>
  <tr>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @statuses.each do |status| %>
  <tr>
    <td><%= status.status %></td>
    <td><%= link_to 'Show', status %></td>
    <td><%= link_to 'Edit', edit_status_path(status) %></td>
    <td><%= link_to 'Destroy', status, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

